<%= form_with url: path, method: method do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <br><%= f.label :street_address %>
  <%= f.text_field :street_address %>
  
  <br><%= f.label :city %>
  <%= f.text_field :city %>
  
  <br><%= f.label :state %>
  <%= f.text_field :state %>

  <br><%= f.label :zip_code %>
  <%= f.number_field :zip_code %>
  
  <br><%= f.label :adopting_reason %>
  <%= f.text_field :adopting_reason %>

  <%= f.submit button_text %>
<% end %>